<div class="px-4 sm:px-6 lg:px-8">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-base font-semibold leading-6 text-gray-900">Import properties</h1>
      <p class="mt-2 text-sm text-gray-700">Upload your CSV file and import properties.</p>
    </div>
  </div>
  <div class="mt-8 flow-root">
    <%= form_tag imports_upload_path, multipart: true, data: { controller: "file-upload" } do %>
      <div class="block text-sm font-medium leading-6 text-gray-900">CSV File</div>
      <div class="mt-2 flex justify-center rounded-lg border border-dashed border-gray-900/25 px-6 py-10">
        <div class="text-center">
          <svg data-file-upload-target="placeholder" class="mx-auto h-12 w-12 text-gray-300" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M1.5 6a2.25 2.25 0 012.25-2.25h16.5A2.25 2.25 0 0122.5 6v12a2.25 2.25 0 01-2.25 2.25H3.75A2.25 2.25 0 011.5 18V6zM3 16.06V18c0 .414.336.75.75.75h16.5A.75.75 0 0021 18v-1.94l-2.69-2.689a1.5 1.5 0 00-2.12 0l-.88.879.97.97a.75.75 0 11-1.06 1.06l-5.16-5.159a1.5 1.5 0 00-2.12 0L3 16.061zm10.125-7.81a1.125 1.125 0 112.25 0 1.125 1.125 0 01-2.25 0z" clip-rule="evenodd" />
          </svg>
          <div data-file-upload-target="filename" class="text-xl font-semibold text-gray-400"></div>
          <div class="mt-4 flex justify-center text-sm leading-6 text-gray-600">
            <label for="file-upload" class="relative cursor-pointer rounded-md bg-white font-semibold text-pink-600 hover:text-pink-500">
              <span>Upload a file</span>
              <%= file_field_tag "file-upload", accept: ".csv", class: "sr-only", data: { file_upload_target: "input", action: "change->file-upload#onInputChange" } %>
            </label>
          </div>
          <p class="text-xs leading-5 text-gray-600">CSV up to 10MB</p>
        </div>
      </div>

      <div class="mt-4 flex justify-center">
        <%= submit_tag "Import", class: "disabled:opacity-50 cursor-pointer w-48 rounded-md bg-pink-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-pink-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-pink-600", disabled: true, data: { file_upload_target: "submit" } %>
      </div>
    <% end %>
  </div>
</div>
